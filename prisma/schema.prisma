generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

// ──────────────────────────────────────────────
// Enums
// ──────────────────────────────────────────────

enum UserRole {
  BUYER
  SELLER
  ADMIN
}

enum ItemType {
  DIRECT
  AGGREGATED
}

enum ItemStatus {
  AVAILABLE
  SOLD
  HIDDEN
}

// ──────────────────────────────────────────────
// Models
// ──────────────────────────────────────────────

model User {
  id        String   @id @default(uuid()) @db.Uuid
  supabaseId String   @unique @map("supabase_id")
  email     String
  role      UserRole @default(BUYER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // relations
  items       Item[]
  collections Collection[]
  favorites   Favorite[]

  @@map("users")
}

model Item {
  id          String     @id @default(uuid()) @db.Uuid
  title       String
  description String?    @db.Text
  price       Int        // stored in cents
  currency    String     @default("USD")
  type        ItemType
  status      ItemStatus @default(AVAILABLE)
  sourceUrl    String?    @map("source_url")
  vendorName   String?    @map("vendor_name")
  sourceItemId String?    @unique @map("source_item_id") // e.g. "etsy:12345" for dedup
  images       String[]
  tags        String[]
  embedding   Unsupported("vector(768)")?
  slug        String     @unique
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  // relations
  sellerId    String     @map("seller_id") @db.Uuid
  seller      User       @relation(fields: [sellerId], references: [id])
  collections CollectionItem[]
  favorites   Favorite[]

  @@index([type, status])
  @@index([sellerId])
  @@map("items")
}

model Collection {
  id        String   @id @default(uuid()) @db.Uuid
  title     String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // relations
  curatorId String           @map("curator_id") @db.Uuid
  curator   User             @relation(fields: [curatorId], references: [id])
  items     CollectionItem[]

  @@map("collections")
}

model CollectionItem {
  collectionId String @map("collection_id") @db.Uuid
  itemId       String @map("item_id") @db.Uuid

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  item       Item       @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@id([collectionId, itemId])
  @@map("collection_items")
}

// ──────────────────────────────────────────────
// Crawler
// ──────────────────────────────────────────────

enum CrawlSourceStatus {
  ACTIVE
  PAUSED
  ERROR
}

enum CrawlRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

model CrawlSource {
  id          String            @id @default(uuid()) @db.Uuid
  vendorName  String            @map("vendor_name")
  baseUrl     String            @map("base_url")
  searchTerms String[]          @map("search_terms")
  strategy    String            @default("api") // "api" | "html"
  config      Json?
  status      CrawlSourceStatus @default(ACTIVE)
  lastCrawlAt DateTime?         @map("last_crawl_at")
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")

  runs CrawlRun[]

  @@map("crawl_sources")
}

model CrawlRun {
  id           String         @id @default(uuid()) @db.Uuid
  sourceId     String         @map("source_id") @db.Uuid
  source       CrawlSource    @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  status       CrawlRunStatus @default(PENDING)
  itemsFound   Int            @default(0) @map("items_found")
  itemsCreated Int            @default(0) @map("items_created")
  itemsSkipped Int            @default(0) @map("items_skipped")
  errorMessage String?        @map("error_message") @db.Text
  startedAt    DateTime?      @map("started_at")
  completedAt  DateTime?      @map("completed_at")
  createdAt    DateTime       @default(now()) @map("created_at")

  @@index([sourceId])
  @@index([status])
  @@map("crawl_runs")
}

model Favorite {
  userId    String   @map("user_id") @db.Uuid
  itemId    String   @map("item_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@id([userId, itemId])
  @@map("favorites")
}
